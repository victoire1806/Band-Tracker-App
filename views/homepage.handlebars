    <div class="login">
      {{! <a href="/">Home</a> }}
      {{#if loggedIn}}
        <button type="button" class="btn btn-primary">Logout</button>
      {{else}}
        <button
          class="btn btn-primary login-button container"
          onclick="window.location.href='/login';"
        >Login</button>
        <button
          class="btn btn-primary login-button container"
          onclick="window.location.href='/signup';"
        >Signup</button>
      {{/if}}
    </div>

    <label for="artist">Find an Artist</label>
    <form class="artist-form">
      <input type="text" id="artist-list" />
      <button>Submit</button>
    </form>

